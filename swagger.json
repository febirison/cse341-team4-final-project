          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "instructor": {
            "type": "string",
            "format": "uuid"
          },
          "students": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "rooms": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        },
        "required": [
          "title",
          "description",
          "instructor",
          "rooms"
        ]
      },
      "Club": {
        "type": "object",
