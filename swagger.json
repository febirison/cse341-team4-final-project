          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        },
        "required": [
          "name",
          "description",
          "meetingStartTime",
          "meetingEndTime"
        ]
      },
      "Room": {
        "type": "object",
        "properties": {
          "buildingName": {
